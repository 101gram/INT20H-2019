{
    "compilerOptions": {
        "outDir": "./../dist/",
        "jsx": "react",
        "target": "es5",
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "..",
        "baseUrl": ".",
        "paths": {
            "@reducers/*":     [ "reducers/*"     ],
            "@actions/*":      [ "actions/*"      ],
            "@components/*":   [ "components/*"   ],
            "@modules/*":      [ "modules/*"      ],
            "@theme/*":        [ "theme/*"        ],
            "@app/*":          [ "./*"            ],

            "*": ["./../common/ambient-declarations/*", "*"]
        },
        "noImplicitAny":   true,
        "experimentalDecorators":     true,
        "strict":                     true,
        "noUnusedLocals":             true,
        "noUnusedParameters":         true,
        "noImplicitThis":             true,
        "noImplicitReturns":          true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "checkJs": false
    },
    "include": [
        "./**/*"
    ]
}